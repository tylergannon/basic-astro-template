---
// import Link from '$components/ui/link.astro';
// import Dropdown from './dropdownMenu.astro';
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar';
import rocket from '$images/cartoon-space-rocket.png';

import {
  Picture,
  breakpoints,
  type PictureSource,
} from 'astro-picture-element';

const sources: PictureSource[] = [
  { width: 28, media: { 'max-width': breakpoints.sm } },
  { width: 35, media: { 'max-width': breakpoints.md } },
  { width: 40, media: { 'max-width': breakpoints.lg } },
  { width: 45, media: { 'max-width': breakpoints.xl } },
];
---

<header class="bg-accent py-5 lg:flex-row lg:px-2">
  <Astronav>
    <div class="flex w-full items-center justify-between lg:w-auto">
      <a href="/" class="flex flex-row pl-2 text-lg">
        <Picture src={rocket} width={60} alt="Site logo" {sources} />
        <div
          class="h-[100%] pl-2 align-middle font-sans text-lg font-extrabold md:text-xl lg:text-3xl xl:text-5xl">
          Template
        </div>
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="h-4 w-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        <li><a>Item 1</a></li>
        <li tabindex="0">
          <details>
            <summary>Parent</summary>
            <ul class="p-2">
              <li><a>Submenu 1</a></li>
              <li><a>Submenu 2</a></li>
            </ul>
          </details>
        </li>
        <li><a>Item 3</a></li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
