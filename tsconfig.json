{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "$/*": ["./src/*"],
      "$components/*": ["./src/components/*"],
      "$images/*": ["./src/assets/images/*"],
      "$layouts/*": ["./src/layouts/*"],
      "$utils/*": ["./src/utils/*"]
    }
  }
}
